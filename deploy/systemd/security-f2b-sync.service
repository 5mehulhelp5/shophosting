[Unit]
Description=ShopHosting Fail2Ban Log Sync
After=network.target

[Service]
Type=oneshot
User=agileweb
WorkingDirectory=/opt/shophosting/security
ExecStart=/usr/bin/python3 -c "import sys; sys.path.insert(0, '.'); from scanners.fail2ban import Fail2BanMonitor; Fail2BanMonitor().sync_to_db()"
TimeoutSec=30

[Install]
WantedBy=multi-user.target
